# API Keys (Required)
TAVILY_API_KEY=your_tavily_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# LLM Configuration
LLM_MODEL=gpt-4  # Model choice for PydanticAI agents

# Output Configuration
OUTPUT_DIR=./drafts

# Optional Settings
LOG_LEVEL=INFO
MAX_RETRIES=3
REQUEST_TIMEOUT=30
TAVILY_SEARCH_DEPTH=advanced  # Options: basic, advanced
TAVILY_INCLUDE_DOMAINS=.edu,.gov,.org  # Academic sources
TAVILY_MAX_RESULTS=10  # Number of search results (1-20)

# RAG System Configuration (Phase 7)
SUPABASE_URL=your_supabase_project_url  # From Supabase dashboard
SUPABASE_SERVICE_KEY=your_supabase_service_key  # Service role key (keep secret!)

# Database Connection Strings
# Direct connection - Use ONLY for migrations and admin tasks
DATABASE_URL=postgresql://postgres:your_password@db.your-project.supabase.co:5432/postgres

# Pooled connection - Use for ALL application queries (RECOMMENDED)
DATABASE_POOL_URL=postgresql://postgres:your_password@db.your-project.supabase.co:6543/postgres?pgbouncer=true

# Connection Pool Settings
POOL_SIZE=10  # Number of connections in the pool (default: 10)
POOL_TIMEOUT=60  # Seconds to wait for available connection (default: 60)

# Embedding Configuration
EMBEDDING_MODEL_NAME=text-embedding-3-small  # OpenAI embedding model
EMBEDDING_BASE_URL=https://api.openai.com/v1  # OpenAI API endpoint
EMBEDDING_BATCH_SIZE=100  # Number of texts to embed at once
EMBEDDING_MAX_RETRIES=3  # Retry attempts for embedding generation

# Cache Configuration
CACHE_SIMILARITY_THRESHOLD=0.8  # Minimum similarity for cache hits (0.0-1.0)
CACHE_TTL_DAYS=7  # Default cache expiration in days
CACHE_MAX_AGE_DAYS=30  # Maximum cache retention (even expired)

# Google Drive Configuration (Future - Phase 7.4)
# GOOGLE_DRIVE_FOLDER_ID=your_monitoring_folder_id  # Folder to watch for documents
# GOOGLE_DRIVE_UPLOAD_FOLDER_ID=your_upload_folder_id  # Folder for generated articles
# GOOGLE_DRIVE_CREDENTIALS_PATH=credentials.json  # Path to OAuth credentials
# GOOGLE_DRIVE_SYNC_INTERVAL=3600  # Sync interval in seconds (1 hour)