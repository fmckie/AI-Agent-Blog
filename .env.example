# API Keys (Required)
TAVILY_API_KEY=your_tavily_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# LLM Configuration
LLM_MODEL=gpt-4  # Model choice for PydanticAI agents

# Output Configuration
OUTPUT_DIR=./drafts

# Optional Settings
LOG_LEVEL=INFO
MAX_RETRIES=3
REQUEST_TIMEOUT=30
TAVILY_SEARCH_DEPTH=advanced  # Options: basic, advanced
TAVILY_INCLUDE_DOMAINS=.edu,.gov,.org  # Academic sources
TAVILY_MAX_RESULTS=10  # Number of search results (1-20)